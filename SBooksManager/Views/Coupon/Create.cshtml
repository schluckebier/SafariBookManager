@model SBooksManager.Models.Coupon

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Coupon</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CouponID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CouponID)
                @Html.ValidationMessageFor(model => model.CouponID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CouponType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CouponType)
                @Html.ValidationMessageFor(model => model.CouponType)
            </div>
        </div>

        @if (Model.CouponType = "DiscountTotal")
        {
            <div class="form-group">
            @Html.LabelFor(model => model.Discount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Discount)
                @Html.ValidationMessageFor(model => model.Discount)
            </div>
        </div>
            
        }
        
        @if (Model.CouponType == FreeShipIf)
        {
            <div class="form-group">
                 @Html.LabelFor(model => model.OrderThreshold, new { @class = "control-label col-md-2" })
             <div class="col-md-10">
                 @Html.EditorFor(model => model.OrderThreshold)
                 @Html.ValidationMessageFor(model => model.OrderThreshold)
    </div>
</div>

        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
